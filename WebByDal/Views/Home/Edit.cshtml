            <a href="/Home/Index" class="btn btn-primary">Go Back</a>
        </div>
        <hr />
        <form method="post" action="/Home/AfterEdit">
            <table class="table table-bordered">
                <tbody>
                    @*   <tr>
                        <td>No</td>
                        <td>
                            <input type="text" name="No" value="@Model.No" />
