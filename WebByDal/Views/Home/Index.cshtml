
@model List<WebByDal.Models.Student>
<html >
<head>
	<title>Home Page</title>
	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>


</head>
<body class="container">
	<div class="text-center ">
		<br />
		<div style="text-align:left">
			<a href="/Home/Create" class="btn btn-primary">Add Record</a>
		</div>
		<hr />
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Project</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var std in Model)
				{
					<tr>
						<td>@std.Id</td>
						<td>@std.Name</td>
						<td>@std.Project</td>
						<td>
							<a href="/Home/Edit/@std.Id" class="btn btn-warning">Edit</a>
						</td>
						<td>
							<a href="/Home/Delete/@std.Id" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>


	

</body>
</html>
